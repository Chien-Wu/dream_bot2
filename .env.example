# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=5000

# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=dream_bot
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=dream_bot_db
MYSQL_ROOT_PASSWORD=your_mysql_root_password

# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_ADMIN_USER_ID=your_line_admin_user_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
AI_CONFIDENCE_THRESHOLD=0.83
OPENAI_MODEL=gpt-4.1-mini
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7
OPENAI_VECTOR_STORE_ID=vs_689e6a5702308191b7d18349fe1d4340
SHOW_AI_DEBUG_INFO=true

# Big AI - Main Conversation (Responses API)
OPENAI_PROMPT_ID=your_main_prompt_id
# Leave empty or unset to always use the latest published version (recommended for production)
# Set a specific number to pin to that version (recommended for testing)
OPENAI_PROMPT_VERSION=
# Examples:
# OPENAI_PROMPT_VERSION=        <- Uses latest version automatically
# OPENAI_PROMPT_VERSION=3       <- Uses version 3 only

# Organization Extraction Responsive Prompt Configuration
OPENAI_ORG_EXTRACT_PROMPT_ID=your_org_extract_prompt_id
# Leave empty to auto-use latest version
OPENAI_ORG_EXTRACT_PROMPT_VERSION=
ENABLE_ORG_EXTRACTION=true

# Small AI - Knowledge Expert (Dream Organization specialist)
OPENAI_KNOWLEDGE_AI_PROMPT_ID=your_knowledge_ai_prompt_id
# Leave empty to auto-use latest version
OPENAI_KNOWLEDGE_AI_PROMPT_VERSION=

# Small AI - Submission Checker (Document submission status tracker)
OPENAI_SUBMISSION_AI_PROMPT_ID=your_submission_ai_prompt_id
# Leave empty to auto-use latest version
OPENAI_SUBMISSION_AI_PROMPT_VERSION=

# Message Buffering Configuration
MESSAGE_BUFFER_TIMEOUT=10.0
MESSAGE_BUFFER_MAX_SIZE=10
MESSAGE_BUFFER_MAX_CHINESE_CHARS=1000

# Handover Configuration
HANDOVER_TIMEOUT_HOURS=1
HANDOVER_CLEANUP_INTERVAL_MINUTES=15

# Google Sheets Integration
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials/google-service-account.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_spreadsheet_id
GOOGLE_SHEETS_SYNC_INTERVAL=10

# Google OAuth for Admin Dashboard
GOOGLE_OAUTH_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret
GOOGLE_OAUTH_ALLOWED_EMAILS=admin1@510.org.tw,admin2@510.org.tw

# Flask Secret Key for Sessions
FLASK_SECRET_KEY=your_random_secret_key_here_change_in_production